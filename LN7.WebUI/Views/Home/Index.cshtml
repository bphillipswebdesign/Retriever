@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Retriever Home</title>
    <link rel="stylesheet" type="text/css" href="~/css/home.css" />
    <link rel="stylesheet" href="https://use.typekit.net/emp4nbz.css"> @*access Proxima Nova, Raleway from Adobe Fonts*@
    <script src="https://kit.fontawesome.com/bf20b559de.js" crossorigin="anonymous"></script> @*for using fontawesome icons*@
</head>
<body>
    <section class="body-section d-flex align-items-center justify-content-center">
        <div class="container-fluid row justify-content-center">
            <div class="col-12 col-xxs-6 col-sm-8 col-md-6 col-lg-6 col-xl-4 col-xxl-3 mx-auto">
                <div class="d-flex flex-column justify-content-center">
                    <img class="dogLogo card-img-top img-fluid mx-auto" src="~/images/dogDetective.svg" />
                    <img class="textLogo img-fluid mx-auto" src="~/images/retrieverTextLogo.svg" />
                </div>
                <div id="welcomeText">
                    <p class="text-center text-white welcome">Welcome to the Dog Guessing Game</p>
                    <p class="text-center text-white guess">Retriever Guesses <br />What Dog You're Thinking Of</p>
                    <p class="text-center text-white signinPlay">Sign In to Play</p>
                </div>
                <div class="text-center text-white">
                    <button class="btnLogin" type="button" onclick="location.href=' @Url.Action("Login", "User")'">Login</button>
                </div>
            </div>
        </div>
    </section>
</body>
</html>