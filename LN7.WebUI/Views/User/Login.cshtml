@model LN7.BL.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    @*<link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">*@
    <link rel="stylesheet" href="https://use.typekit.net/emp4nbz.css"> @*access Proxima Nova, Raleway from Adobe Fonts*@
    <script src="https://kit.fontawesome.com/bf20b559de.js" crossorigin="anonymous"></script> @*for using fontawesome icons*@
</head>

<body class="container-fluid">
    <div class="wrapper row d-flex justify-content-center">
        <div class="col-12 col-xxs-6 col-sm-8 col-md-8 col-lg-8 col-xl-4 col-xxl-4 mx-auto">
            <div class="container-fluid flex-column justify-content-center">
                @* <div class="logo-image-container col-12 col-xxs-6 col-sm-8 col-md-8 col-lg-8 col-xl-4 col-xxl-4 mx-auto"> *@
                <img class="logo-image-login img-fluid mx-auto d-block" src="~/images/retrieverTextandDogSmall.svg" onclick="location.href='@Url.Action("Index", "Home")'" alt="black dog head with white magnifying glass over left eye">

                @* <div class="logo-text">
                <h2>Retriever</h2>
                </div> *@

                @* </div> *@

                <div class="formMargins form-container mx-auto justify-content-center">
                    <div class="login-item">
                        <form asp-action="Login" class="form form-login">
                            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                            <div class="form-field mx-auto justify-content-center">


                                <label @*asp-for="Username" *@ class="control-label user"></label>
                                <input asp-for="Username" class="form-control" placeholder="Username" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-field mx-auto justify-content-center">
                                <label @*asp-for="Password"*@ class="control-label pass"></label>
                                <input type="Password" asp-for="Password" class="form-control" placeholder="Password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-field buttons">
                                <input type="submit" value="Login" class="btnLogin" asp-controller="User" asp-action="Login"/>
                                @* <input type="submit" value="Sign Up" class="signupBtn" asp-area="" asp-controller="User" asp-action="Signup" /> *@
                                <button type="button" value="Sign Up" class="btnLogin" onclick="location.href=' @Url.Action("Signup", "User")'">SignUp</button>
                                @* Future code fix? Redirect to signup page? *@
                                @* <button class="signupBtn" type="button" onclick="location.href=' @Url.Action("Signup", "User")'">Sign Up</button> *@
                                @* <button class="signupBtn" type="button" onclick="location.href=' @Url.Action("DisplayQuestion", "QuestionController")'">Sign Up</button> *@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
