@model LN7.BL.Models.GameQuestion

@{
    ViewData["Title"] = "AllQuestionsAsked";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Retriever Home</title>
    <link rel="stylesheet" type="text/css" href="~/css/questionsAskedandGuess.css" />
    <link rel="stylesheet" href="https://use.typekit.net/emp4nbz.css"> @*access Proxima Nova, Raleway from Adobe Fonts*@
    <script src="https://kit.fontawesome.com/bf20b559de.js" crossorigin="anonymous"></script> @*for using fontawesome icons*@
</head>
<body>
    <div class="container-fluid mh-100 justify-content-center d-flex align-items-center">
        <section class="body-section d-flex align-items-center">
            <div class="container-fluid row row-main justify-content-center d-flex align-items-center">
            <div class="col-6 mh-100">
                <div class="speech-bubble d-flex align-items-center ">
                    <div class="speech-text justify-content-center">
                        <h2>We could not identify Your Dog</</h2>
                    </div>
                </div>

                <div class="buttons-selector d-flex justify-content-center">
                    <form asp-controller="Question" asp-action="DisplayQuestion" method="post" class="btn-display">
                        <input type="submit" value="Try Again" class="btnYesNo btn-small" asp-controller="Question" asp-action="DisplayQuestion" formmethod="post" />
                    </form>
                </div>
            </div>
            <div class="col-5 mh-100 d-flex align-items-center">
                <div class="retriever">
                    <img class="img-fluid mx-auto" src="~/images/dogCharacter.svg" />
                </div>
            </div>
        </div>
    </section>
    </div>
</body>
</html>